<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="camera_capture_wizard_view_form" model="ir.ui.view">
        <field name="name">camera_capture_wizard.view.form</field>
        <field name="model">camera.capture.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="image" widget="camera_capture" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" class="btn btn-primary" string="Confirm"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
