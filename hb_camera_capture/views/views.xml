<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="example_model_action" model="ir.actions.act_window">
        <field name="name">Example Model</field>
        <field name="res_model">example.model</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="example_model_view_tree" model="ir.ui.view">
        <field name="name">example_model.view.tree</field>
        <field name="model">example.model</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="name"/>
            </list>
        </field>
    </record>

   <record id="example_model_view_form" model="ir.ui.view">
    <field name="name">example_model.view.form</field>
    <field name="model">example.model</field>
    <field name="arch" type="xml">
        <form string="">
            <header>
                <button name="camera_capture_button" class="btn btn-primary" string="Capture Image" type="object" />
            </header>
            <sheet>
                <field name="image" widget="image" class="oe_avatar m-0"/>
                <div class="oe_title mb-3">
                    <label for="name"/>
                    <h1 class="d-flex flex-row">
                        <field name="name" placeholder="Full Name" string="Full Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                    </h1>
                </div>
            </sheet>
        </form>
    </field>
   </record>

   <record id="camera_capture_wizard_view_form" model="ir.ui.view">
        <field name="name">camera_capture_wizard.view.form</field>
        <field name="model">camera.capture.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="image" widget="camera_capture" nolabel="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" type="object" class="btn btn-primary" string="Confirm"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

  <menuitem
        id="ot_purchase_menu_root"
        name="Camera Capture"
        web_icon="hb_camera_capture,static/description/icon.png"
        sequence="8"/>

        <menuitem
            id="purchase_purchase_menu"
            name="Example Model"
            action="example_model_action"
            parent="ot_purchase_menu_root"
            sequence="1"/>

</odoo>
